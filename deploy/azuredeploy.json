{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "Deploy Logic App with Log Analytics workspace and Storage Account connections"
  },
  "parameters": {
    "logicAppName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Logic App"
      }
    },
    "existingAppServicePlanId": {
      "type": "string",
      "metadata": {
        "description": "Resource ID of the existing App Service Plan"
      }
    },
    "logAnalyticsWorkspaceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Log Analytics workspace"
      }
    },
    "storageAccountName": {
      "type": "string",
      "metadata": {
        "description": "Name of the storage account (must be globally unique)"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "storageContainerName": {
      "type": "string",
      "defaultValue": "logicapp-data",
      "metadata": {
        "description": "Name of the blob container"
      }
    },
    "logAnalyticsRetentionDays": {
      "type": "int",
      "defaultValue": 30,
      "minValue": 7,
      "maxValue": 730,
      "metadata": {
        "description": "Number of days to retain logs in Log Analytics workspace"
      }
    }
  },
  "variables": {
    "uniqueSuffix": "[take(uniqueString(resourceGroup().id, deployment().name), 5)]",
    "logicAppNameWithSuffix": "[concat(parameters('logicAppName'), '-', variables('uniqueSuffix'))]",
    "logAnalyticsWorkspaceNameWithSuffix": "[concat(parameters('logAnalyticsWorkspaceName'), '-', variables('uniqueSuffix'))]",
    "storageAccountNameWithSuffix": "[concat(take(replace(replace(toLower(parameters('storageAccountName')), '-', ''), '_', ''), 19), variables('uniqueSuffix'))]",
    "logicAppStorageAccountName": "[concat(take(replace(replace(toLower(parameters('logicAppName')), '-', ''), '_', ''), 15), variables('uniqueSuffix'))]",
    "azureBlobConnectionName": "[concat(variables('logicAppNameWithSuffix'), '-azureblob')]",
    "azureMonitorLogsConnectionName": "[concat(variables('logicAppNameWithSuffix'), '-azuremonitorlogs')]"
  },
  "resources": [
    {
      "type": "Microsoft.OperationalInsights/workspaces",
      "apiVersion": "2022-10-01",
      "name": "[variables('logAnalyticsWorkspaceNameWithSuffix')]",
      "location": "[parameters('location')]",
      "properties": {
        "sku": {
          "name": "PerGB2018"
        },
        "retentionInDays": "[parameters('logAnalyticsRetentionDays')]",
        "features": {
          "enableLogAccessUsingOnlyResourcePermissions": true
        }
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "[variables('storageAccountNameWithSuffix')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "minimumTlsVersion": "TLS1_2",
        "allowBlobPublicAccess": false,
        "supportsHttpsTrafficOnly": true,
        "encryption": {
          "services": {
            "blob": {
              "enabled": true
            },
            "file": {
              "enabled": true
            }
          },
          "keySource": "Microsoft.Storage"
        },
        "accessTier": "Hot"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices",
      "apiVersion": "2023-01-01",
      "name": "[concat(variables('storageAccountNameWithSuffix'), '/default')]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountNameWithSuffix'))]"
      ]
    },
    {
      "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
      "apiVersion": "2023-01-01",
      "name": "[concat(variables('storageAccountNameWithSuffix'), '/default/', parameters('storageContainerName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts/blobServices', variables('storageAccountNameWithSuffix'), 'default')]"
      ],
      "properties": {
        "publicAccess": "None"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2023-01-01",
      "name": "[variables('logicAppStorageAccountName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard_LRS"
      },
      "kind": "StorageV2",
      "properties": {
        "minimumTlsVersion": "TLS1_2",
        "allowBlobPublicAccess": false,
        "supportsHttpsTrafficOnly": true,
        "encryption": {
          "services": {
            "blob": {
              "enabled": true
            },
            "file": {
              "enabled": true
            }
          },
          "keySource": "Microsoft.Storage"
        },
        "accessTier": "Hot"
      }
    },
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "name": "[variables('azureBlobConnectionName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountNameWithSuffix'))]"
      ],
      "properties": {
        "displayName": "Azure Blob Storage Connection",
        "api": {
          "id": "[subscriptionResourceId('Microsoft.Web/locations/managedApis', parameters('location'), 'azureblob')]"
        },
        "parameterValues": {
          "accountName": "[variables('storageAccountNameWithSuffix')]",
          "accessKey": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountNameWithSuffix')), '2023-01-01').keys[0].value]"
        }
      }
    },
    {
      "type": "Microsoft.Web/connections",
      "apiVersion": "2016-06-01",
      "name": "[variables('azureMonitorLogsConnectionName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceNameWithSuffix'))]"
      ],
      "properties": {
        "displayName": "Azure Monitor Logs Connection",
        "api": {
          "id": "[subscriptionResourceId('Microsoft.Web/locations/managedApis', parameters('location'), 'azuremonitorlogs')]"
        }
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "[variables('logicAppNameWithSuffix')]",
      "location": "[parameters('location')]",
      "kind": "functionapp,workflowapp",
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', variables('logicAppStorageAccountName'))]",
        "[resourceId('Microsoft.Web/connections', variables('azureBlobConnectionName'))]",
        "[resourceId('Microsoft.Web/connections', variables('azureMonitorLogsConnectionName'))]"
      ],
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "serverFarmId": "[parameters('existingAppServicePlanId')]",
        "siteConfig": {
          "appSettings": [
            {
              "name": "AzureWebJobsStorage",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('logicAppStorageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('logicAppStorageAccountName')), '2023-01-01').keys[0].value, ';EndpointSuffix=core.windows.net')]"
            },
            {
              "name": "FUNCTIONS_EXTENSION_VERSION",
              "value": "~4"
            },
            {
              "name": "FUNCTIONS_WORKER_RUNTIME",
              "value": "node"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "~18"
            },
            {
              "name": "APP_KIND",
              "value": "workflowApp"
            },
            {
              "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('logicAppStorageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('logicAppStorageAccountName')), '2023-01-01').keys[0].value, ';EndpointSuffix=core.windows.net')]"
            },
            {
              "name": "WEBSITE_CONTENTSHARE",
              "value": "[toLower(variables('logicAppNameWithSuffix'))]"
            },
            {
              "name": "AzureBlob_blobStorageEndpoint",
              "value": "[reference(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountNameWithSuffix')), '2023-01-01').primaryEndpoints.blob]"
            },
            {
              "name": "LogAnalytics_WorkspaceName",
              "value": "[variables('logAnalyticsWorkspaceNameWithSuffix')]"
            },
            {
              "name": "LogAnalytics_WorkspaceId",
              "value": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceNameWithSuffix')), '2022-10-01').customerId]"
            }
          ],
          "use32BitWorkerProcess": false,
          "netFrameworkVersion": "v6.0"
        },
        "httpsOnly": true,
        "clientAffinityEnabled": false
      }
    }
  ],
  "outputs": {
    "logicAppName": {
      "type": "string",
      "value": "[variables('logicAppNameWithSuffix')]"
    },
    "logicAppPrincipalId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Web/sites', variables('logicAppNameWithSuffix')), '2022-09-01', 'full').identity.principalId]"
    },
    "storageAccountName": {
      "type": "string",
      "value": "[variables('storageAccountNameWithSuffix')]"
    },
    "logAnalyticsWorkspaceName": {
      "type": "string",
      "value": "[variables('logAnalyticsWorkspaceNameWithSuffix')]"
    },
    "logAnalyticsWorkspaceId": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.OperationalInsights/workspaces', variables('logAnalyticsWorkspaceNameWithSuffix')), '2022-10-01').customerId]"
    },
    "azureBlobConnectionId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Web/connections', variables('azureBlobConnectionName'))]"
    },
    "azureMonitorLogsConnectionId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Web/connections', variables('azureMonitorLogsConnectionName'))]"
    }
  }
}